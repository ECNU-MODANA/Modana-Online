<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.bgzigbee.manage.dao.SpiderCollectionConfigMapper">

    <insert id="addConfig" parameterType="com.smartcold.bgzigbee.manage.entity.SpiderCollectionConfigEntity">
        INSERT INTO `spidercollectionconfig`(
		`username`,
		`password`,
		`rdcid`,
		`addTime`
		)
		VALUE 
		(
		#{username},
		#{password},
		#{rdcid},
		now()
		)
    </insert>
    
    <update id="updateConfig" parameterType="com.smartcold.bgzigbee.manage.entity.SpiderCollectionConfigEntity">
        UPDATE `spidercollectionconfig`
        SET
        `username` = #{username},
        `password` = #{password}
        WHERE rdcid = #{rdcid}
    </update>

    <select id="findConfigByRdcid" parameterType="map" resultType="com.smartcold.bgzigbee.manage.entity.SpiderCollectionConfigEntity">
		SELECT *
		FROM `spidercollectionconfig` WHERE `rdcid` = #{rdcid}
	</select>
	
	<delete id="deleteConfig" parameterType="map">
	    DELETE from `spidercollectionconfig` where rdcid = #{rdcid}
	</delete>

</mapper>