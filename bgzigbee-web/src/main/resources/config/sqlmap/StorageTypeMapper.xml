<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartcold.bgzigbee.manage.dao.StorageTypeMapper">

	<select id="findAll" parameterType="map" resultType="StorageTypeEntity">
		SELECT *
		FROM `storagetype` order by `id` ASC
	</select>
    <insert id="addStorageType" parameterType="StorageTypeEntity"
     useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `storagetype`(
		`type`,
		`addTime`
		)
		VALUE 
		(
		#{type},
		now()
		)
		 
    </insert>
     <delete id="deleteStorageType" parameterType="map">
	    DELETE FROM storagetype WHERE `id` = #{id}
	</delete>
</mapper>